<% if current_user && current_user.admin == true %>
	<div class="center">
		<span class="color"><h2><%= @category.name %></h2></span>
		<% if @category.products.first %>
			<% @products.reverse.each do |product| %>
				<%= link_to product.name, category_product_path(@category.id, product.id) %>
				<br>
				<%= image_tag product.image.url(:medium) %>
				<br><br>
			<% end %>
			<%= paginate @products %>
		<% else %>
			There are currently no products of this type.
		<% end %>
		<br><br>
		<%= link_to "[Add a Product]", new_category_product_path(@category.id), class: "colorlink" %>
	</div>
<% end %>
