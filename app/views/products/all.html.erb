<% if current_user && current_user.admin == true %>
	<span class="color"><h2> All Products </h2></span>
	<% @products.reverse.each do |product| %>
			<%= link_to product.name, category_product_path(product.category.id, product.id) %>
			<br>
			<%= image_tag product.image.url(:medium), class: "smallproduct" %>
			<br><br>
		<% end %>
	<%= paginate @products %>
<% end %>