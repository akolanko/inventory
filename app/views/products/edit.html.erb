<% if current_user && current_user.admin == true %>

	<h2>Edit <%= @product.name %></h2>

		<div class="formdiv">
			<%= form_for [@category, @product] do |f| %>
				<%= f.label :name, "Name" %>
				<br>
				<%= f.text_field :name %>
				<br>
				<%= f.label :color, "Color" %>
				<br>
				<%= f.text_field :color %>
				<br>
				<%= f.label :material, "Material" %>
				<br>
				<%= f.text_field :material %>
				<br>
				<%= f.label :measurements, "Measurements" %>
				<br>
				<%= f.text_area :measurements%>
				<br>
				<%= f.label :price, "Price" %>
				<br>
				<%= f.text_field :price %>
				<br>
				<%= f.label :inventory, "Amount in Stock" %>
				<br>
				<%= f.text_field :inventory %>
				<br>
				<%= f.label :soldout, "Sold Out" %>
				<br>
				<%= f.check_box :soldout %>
				<br>
				<%= f.submit "Update", :class => "submit" %>
			<% end %>
		</div>

<% end %>