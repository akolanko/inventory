<% if current_user && current_user.admin == true %>
<div class="colone">
	<h2>All Users</h2>

	<% @users.each do |user| %>
		<span class="paddingspan"><%= link_to user.username, user_path(user.id) %></span>
		<span class="paddingspan"><%=link_to "[Delete Account]", user_path(user.id), method: :delete, confirm: "Are you sure you want to delete this account?", class: "colorlink" %></span>
		<br><br>
	<% end %>
</div>
<div class="clear">
</div>
<% end %>
